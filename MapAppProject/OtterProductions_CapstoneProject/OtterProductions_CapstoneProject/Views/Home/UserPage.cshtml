        {
            <ul class="list-group list-group-horizontal">
                <a href="#"></a><li class="list-group-item list-group-item-action">@i.EventName</li>
                <li class="list-group-item">@i.EventLocation</li>
                <li class="list-group-item">@i.EventDate</li>
                <li class="list-group-item">@i.EventDescription</li>

            </ul>
        }*@
    }
    

</div>